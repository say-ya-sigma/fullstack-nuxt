// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = "mysql://root:root@127.0.0.1:3306/prisma"
}

model User {
  id            Int             @id @default(autoincrement())
  email         String          @unique
  name          String?
  meetingMinute MeetingMinute[]
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt

  @@map("users")
}

model MeetingMinute {
  id              Int              @id @default(autoincrement())
  title           String
  body            String
  author          User             @relation(fields: [authorId], references: [id])
  authorId        Int
  meetingThread   MeetingStructure @relation(fields: [meetingThreadId], references: [id])
  meetingThreadId Int
  startAt         DateTime
  endAt           DateTime?
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt

  @@map("meeting_minutes")
}

model MeetingStructure {
  id            Int             @id @default(autoincrement())
  title         String
  path          String
  meetingMinute MeetingMinute[]
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt

  @@map("meeting_structures")
}
